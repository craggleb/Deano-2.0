FROM node:20-slim

# Set environment variables to avoid ARM64 issues
ENV ROLLUP_SKIP_NATIVE=true

# Install dependencies for testing
RUN apt-get update && apt-get install -y libc6 openssl

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY packages/api/package*.json ./packages/api/
COPY packages/web/package*.json ./packages/web/

# Install all dependencies including dev dependencies
RUN npm install

# Copy source code
COPY . .

# Generate Prisma client
RUN npx prisma generate --schema=./packages/api/prisma/schema.prisma

# Fix Rollup ARM64 issue by installing the missing dependency
RUN npm install @rollup/rollup-linux-arm64-gnu --no-save

# Set working directory to API package
WORKDIR /app/packages/api



# Expose test port
EXPOSE 3001

# Default command (can be overridden)
CMD ["npm", "run", "test:coverage"]
