# Database Configuration
DATABASE_URL="postgresql://deano:deano_password@localhost:5432/deano_task_manager"

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Authentication
BYPASS_AUTH=true

# Logging
LOG_LEVEL=info
VERBOSE_LOGGING=false

# Rate Limiting
# For development, you might want to increase these values:
# RATE_LIMIT_WINDOW_MS=900000 (15 minutes)
# RATE_LIMIT_MAX_REQUESTS=500 (500 requests per 15 minutes for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# API Documentation
SWAGGER_TITLE="Deano Task Manager API"
SWAGGER_DESCRIPTION="A comprehensive task management API with dependency logic and scheduling capabilities"
SWAGGER_VERSION="1.0.0"
